{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client" 
      }
    },
    {
      "src": "server/index.cjs", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/index.cjs" 
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
